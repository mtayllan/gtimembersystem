<%= form_tag dashboard_projects_path, method: :get do %>
  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title">Projetos</h3>
        <div class="box-tools">
          <div class="input-group input-group-sm" style="width: 150px;">
            <%= text_field_tag(:q, params[:q] , { class:"form-control pull-right", placeholder: "Pesquisar" }) %>
            <div class="input-group-btn">
              <%= button_tag(type: "submit", class: "btn btn-default") do %>
                  <i class="fa fa-search"></i>
              <% end %>
            </div>
          </div>
        </div>
    </div>
    <!— /.box-header —>
    <div class="box-body ">
      <table class="table table-hover">
        <tbody>
          <tr>
          <th>Nome</th>
          <th>Cliente</th>
          <th>Data de Início</th>
          <th>Descrição</th>
          <th></th>
        </tr>
        <% @projects.each do |project| %>

          <td><%= project.name %></td>
          <td><%= project.client %></td>
          <td>
            <% if project.start_date? %> 
              <%= project.start_date.strftime("%d/%m/%Y") %>
            <% end %>
          </td>
          <td><%= project.description%></td>
  
          <td>
            <%= link_to dashboard_project_path(project), class: "btn btn-sm btn-info" do %>
              <i class="fa fa-eye"></i>
            <% end %>
          </td>
        </tr>
        <%end%>
      </tbody></table>
      <%= paginate @projects %>
      <hr>
    </div>
  </div>
<% end %>