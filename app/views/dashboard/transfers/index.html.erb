<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title">Últimas Transferências</h3>
    <!-- /.box-header -->
  <div class="box-body table-responsive" style="">
    <table class="table table-hover">
      <tbody><tr>
        <th>Descrição</th>
        <th>Tipo</th>
        <th>Valor</th>
        <th>Data</th>
        <th></th>
      </tr>
      <% @transferences.each do |transfer| %>
      <tr>
        <td><%= transfer.description %></td>
        <% if transfer.category == 'in' %>
          <td><span class="label bg-teal-active color-palette">Entrada</span></td>
        <% else %>
          <td><span class="label bg-orange-active color-palette ">Saída</span></td>
        <% end %>
        <td><%= humanized_money_with_symbol transfer.price %></td>
        <td>
          <% if transfer.date? %> 
            <%= transfer.date.strftime("%d/%m/%Y") %>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
    </table>
    <%= paginate @transferences %>
    
  </div>
  
</div>  

