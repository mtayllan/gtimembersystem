<div class="box box-primary">
            <div class="box-header  with-border">
              <h3 class="box-title">Eventos</h3>

              <div class="box-tools">
                <div class="input-group input-group-sm" style="width: 150px;">
                  <input name="table_search" class="form-control pull-right" placeholder="Search" type="text">

                  <div class="input-group-btn">
                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>

                  </div>
                </div>
              </div>
            </div>
            <!— /.box-header —>
            <div class="box-body ">
              <table class="table table-hover">
                <tbody><tr>
                  
                  <th>Name</th>
                  <th>Date</th>
                  <th>Description</th>
                </tr>
                <% @events.each do |event| %>
                <tr>
                  
                  <td><%= event.name %></td>
                  <td><%= event.date%></td>
                  <td><%= event.description%></td>
           
                  <td>
                    <div class="btn-group-vertical">
                      <%= link_to administrative_event_path(event), class: "btn btn-sm btn-info" do %>
                        <i class="fa fa-eye"></i>
                      <% end %>
                      <%= link_to edit_administrative_event_path(event), class: "btn btn-sm btn-warning" do %>
                        <i class="fa fa-edit"></i>
                      <% end %>
                      <%= link_to administrative_event_path(event), method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-sm btn-danger" do %>
                        <i class="fa fa-trash"></i>
                      <% end %>
                    </div>
                  </td>
                </tr>
                <%end%>
                </tbody>
              </table>
              <hr>
     <%= paginate @events %>
    <div class="pull-right" style="margin-right: 40px"><%= link_to new_administrative_event_path, class: "btn btn-success" do %>
        Novo <i class="fa fa-plus"></i>
    <% end %></div>
            </div>
            <!— /.box-body —>
          </div>
          <!— /.box —>