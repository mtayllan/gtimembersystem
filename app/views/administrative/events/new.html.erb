 

<% if @event.errors.any? %>

   <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                
    <ul>
        <% @event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>

    </div>
<% end %>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Novo Evento</h3>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="col-lg-6">

          <%= form_for @event, url: {controller: "events", method: "post"} do |f| %>

                <div class="form-group">
                    <%= f.label :name %>
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                    <%= f.text_field :name, class:"form-control", placeholder:"Ex: ECEJ"  %>  
                </div>
                </div>
                <div class="form-group">
                    <%= f.label :date %>
                <div class="input-group date">
                  <div class="input-group-addon">
                    <i class="fa fa-calendar"></i>
                  </div>
                    <%= f.text_field :date, class:"form-control datepicker ",value: (l(@event.date) unless @event.date.blank?), placeholder:"Ex: 12/05/2018" %>  
                </div>
                </div>
                   <div class="form-group">
                    <%= f.label :description %>
                    <%= f.text_area :description,class:"form-control", rows:"3", placeholder:"Ex: Encontro Cearense de Empresas Juniores" %> 
                    </div>
               <%= f.submit  "Salvar", :class => "btn btn-block btn-success btn-flat" %> 
            <% end %>
        </div>
    </div>
    <!-- /.panel-body -->
</div>
           
             