<div class="box box-danger">
  <div class="box-header with-border">
    <h3 class="box-title"><%= @event.name %></h3>

    <div class="box-tools pull-right">
      <% if @event.date? %>
        <span><%= @event.date.strftime("%d/%m/%Y") %></span>
      <% end %>
      <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
      </button>
    </div>
  </div>
  <!-- /.box-header -->
  <div class="box-body">
    <p class="text-light-blue"> <%= @event.description %></p>
    <ul class="users-list clearfix">
      <% @event.participations.each do |pt| %>
        <li>
          <% user = User.find(pt.user_id)  %>
          <% if user.photo? %>
            <%= image_tag(user.photo.profile.url, :class => "img-circle img-list-event") %>
          <% else %>
            <img src="/images/gti_user_pic.png" class="img-list-event" alt="User Image" />
          <% end %>
          <%= link_to "#{user.name}", administrative_user_path(user), class:"users-list-name" %>
          <span class="users-list-date"><%= user.role %></span>
        </li>
      <% end %>
    </ul>
    <!-- /.users-list -->
  </div>
  <!-- /.box-body -->
  <div class="box-footer text-center">
    <a href="javascript:void(0)" class="uppercase">View All Users</a>
  </div>
  <!-- /.box-footer -->
</div>