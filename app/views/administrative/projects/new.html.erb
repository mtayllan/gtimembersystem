<div class="panel panel-default">
    <div class="panel-heading">
        <h1>Novo projeto</h1>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="col-lg-12">
           <%= form_for @project,  :url => {:action => 'create' } do |f| %>
                <div class="form-group">
                    <%= f.label :name %>
                    <%= f.text_field :name, class:"form-control", placeholder:"Ex: Lina"  %>  
                </div>

                <div class="form-group">
                    <%= f.label :value %>
                    <%= f.text_field :value, class:"form-control", placeholder:"Ex: Lina"  %>  
                </div>
                
                <div class="input-group date">
                  <div class="input-group-addon">
                    <i class="fa fa-calendar"></i>
                    <%= f.label :start_date %>
                    <%= f.date_select :start_date, class:"form-control pull-right", id:"datepicker", type:"text", placeholder:"Ex: 12/05/2018" %>  
                  </div>
                </div>
                  <div class="input-group-addon">
                    <i class="fa fa-calendar"></i>
                    <%= f.label :expected_date %>
                    <%= f.date_select :expected_date, class:"form-control pull-right", id:"datepicker", type:"text", placeholder:"Ex: 12/05/2018" %>  
                  </div>
                </div>
                 <div class="input-group date">
                  <div class="input-group-addon">
                    <i class="fa fa-calendar"></i>
                    <%= f.label :end_date %>
                    <%= f.date_select :end_date, class:"form-control pull-right", id:"datepicker", type:"text", placeholder:"Ex: 12/05/2018" %>  
                  </div>
                </div>
                 <div class="input-group date">
                  
                   <div class="form-group">
                    <%= f.label :description %>
                    <%= f.text_field :description,class:"form-control", rows:"3", placeholder:"Ex: Encontro Cearense de Empresas Juniores" %> 
                    </div>
                </div>

                <div class="form-group">
                    <%= f.label :client %>
                    <%= f.text_field :client, class:"form-control", placeholder:"Ex: Lina"  %>  
                </div>
               <%= f.submit  "Salvar", :class => "btn btn-block btn-success btn-flat" %> 
            <% end %>
        </div>
    </div>
    <!-- /.panel-body -->
</div>

