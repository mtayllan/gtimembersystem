<% if @project.errors.any? %>

   <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                
    <ul>
        <% @project.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>

    </div>
<% end %>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3><%= action_message %></h3>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="col-lg-6">
          <%= form_for([:administrative, @project]) do |f| %>
                <div class="form-group">
                    <%= f.label :name %>
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                      <%= f.text_field :name, class:"form-control", placeholder:"Ex: Lina"  %>  
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label :price %>
                    <div class="input-group">
                      <div class="input-group-addon"><%= @project.price.currency.symbol %></div>
                        <%= f.text_field :price, class: "form-control", placeholder: "Preço" %>
                    </div>
                </div>
                <div class="form-group">
                  <%= f.label :client %>
                  <div class="input-group">
                      <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                      <%= f.text_field :client, class:"form-control", placeholder:"Ex: Lina"  %>  
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label :start_date %>
                  <div class="input-group date">
                    <div class="input-group-addon">
                      <i class="fa fa-calendar"></i>
                    </div>
                    <%= f.text_field :start_date, class: "form-control datepicker", value: (l(@project.start_date) unless @project.start_date.blank?), placeholder:"Ex: 12/05/2018" %>
                  </div>
                  <!-- /.input group -->
                </div>
                <div class="form-group">
                  <%= f.label :expected_date %>
                  <div class="input-group date">
                    <div class="input-group-addon">
                      <i class="fa fa-calendar"></i>
                    </div>
                    <%= f.text_field :expected_date, class: "form-control datepicker", value: (l(@project.expected_date) unless @project.expected_date.blank?), placeholder:"Ex: 12/05/2018" %>
                  </div>
                  <!-- /.input group -->
                </div>
                <div class="form-group">
                  <%= f.label :end_date %>
                  <div class="input-group date">
                    <div class="input-group-addon">
                      <i class="fa fa-calendar"></i>
                    </div>
                    <%= f.text_field :end_date, class: "form-control datepicker", value: (l(@project.end_date) unless @project.end_date.blank?), placeholder:"Ex: 12/05/2018" %>
                  </div>
                  <!-- /.input group -->
                </div>
                <div class="form-group">
                  <%= f.label :description %>
                  <%= f.text_area :description,class:"form-control", rows:"3", placeholder:"Ex: Site com um estilo de blog" %> 
                </div>
                <%= submit_tag "Salvar", class: "btn btn-block btn-success btn-flat" %> 
            <% end %>
        </div>
    </div>
    <!-- /.panel-body -->
</div>