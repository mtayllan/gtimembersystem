<div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Projetos</h3>

              <div class="box-tools">
                <div class="input-group input-group-sm" style="width: 150px;">
                  <input name="table_search" class="form-control pull-right" placeholder="Search" type="text">

                  <div class="input-group-btn">
                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>

                  </div>
                </div>
              </div>
            </div>
            <!— /.box-header —>
            <div class="box-body ">
              <table class="table table-hover">
                <tbody>
                  <tr>
                  <th>Nome</th>
                  <th>Valor</th>
                  <th>Cliente</th>
                  <th>Data de Início</th>
                  <th>Data de Prevista</th>
                  <th>Data de Fim</th>
                  <th>Descrição</th>
                </tr>
                <% @projects.each do |project| %>

                  <td><%= project.name %></td>
                  <td><%= project.value %></td>
                  <td><%= project.client %></td>
                  <td><%= project.start_date %></td>
                  <td><%= project.expected_date %></td>
                  <td><%= project.end_date%></td>
                  <td><%= project.description%></td>
           
                  <td>
                    <div class="btn-group-vertical">

                      <%= link_to edit_administrative_project_path(project), class: "btn btn-sm btn-warning" do %>
                        <i class="fa fa-edit"></i>
                      <% end %>
                      <%= link_to administrative_project_path(project), method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-sm btn-danger" do %>
                        <i class="fa fa-trash"></i>
                      <% end %>
                    </div>
                  </td>
                </tr>
                <%end%>
              </tbody></table>
              <%= paginate @projects %>
              <hr>
              <div class="pull-right">
                <%= link_to new_administrative_project_path, class: "btn btn-success" do %>
                Novo <i class="fa fa-plus"></i>
                <% end %>
              </div>
            </div>
            <!— /.box-body —>
          </div>
          <!— /.box —>
