<h1 class="page-header">Transferência</h1>

<% if @transfer.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <ul>
        <% @transfer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>

    </div>
<% end %>

<div class="panel panel-default">
    <div class="panel-heading">
        <%= action_message %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="col-lg-6">
            <%= form_for([:administrative, @transfer]) do |f| %>
                <div class="form-group">
                    <%= f.label :description %>
                    <%= f.text_area :description, class: "form-control", rows: 10 %>
                </div>
                <div class="form-group">
                        <%= f.label :category %>
                        <%= f.collection_radio_buttons(:category, options_for_categories, :id, :description) do |b| %>
                            <div class="radio">
                                <%= b.label { b.radio_button + b.text} %>
                            </div>
                        <% end %>
                    </div>
                <div class="form-group">
                  <%= f.label :date %>
                  <div class="input-group date">
                    <div class="input-group-addon">
                      <i class="fa fa-calendar"></i>
                    </div>
                    <%= f.text_field :date, autocomplete: false, class:"form-control datepicker ",value: (l(@transfer.date) unless @transfer.date.blank?), placeholder:"Ex: 12/05/2018" %>  
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label :price %>
                    <div class="input-group">
                      <div class="input-group-addon"><%= @transfer.price.currency.symbol %></div>
                        <%= f.text_field :price, class: "form-control", placeholder: "Título" %>
                    </div>
                </div>
                <%= submit_tag "Salvar", class: "btn btn-block btn-success btn-flat" %> 
            <% end %>
        </div>
    </div>
    <!-- /.panel-body -->
</div>

