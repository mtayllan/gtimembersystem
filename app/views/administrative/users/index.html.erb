  <div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title">Usu√°rios</h3>
  </div>
  <!-- /.box-header -->
  <div class="box-body" style="">
    <table class="table table-hover">
      <tbody><tr>
        <th>Foto</th>
        <th>Nome</th>
        <th>Cargo</th>
        <td></td>
      </tr>
      <% @users.each do |user| %>
      <tr>
        <td> 
          <% if user.photo? %> 
            <%= image_tag(user.photo.sidebar.url, :class => "img-responsive") %>
          <% else %>
            <img src="/images/gti_user_pic50p.png" class="img-responsive" alt="User Image" />
          <% end %>
        </td>
        <td><%= user.name %></td>
        <td><%= user.role %></td>
        <td><div class="btn-group-vertical">
            <%= link_to administrative_user_path(user), class: "btn btn-xs btn-info" do %>
              <i class="fa fa-eye"></i>
            <% end %>
            <%= link_to edit_administrative_user_path(user), class: "btn btn-xs bg-orange" do %>
              <i class="fa fa-edit"></i>
            <% end %>
            <%= link_to administrative_user_path(user), method: :delete, class: "btn btn-xs btn-danger" do %>
              <i class="fa fa-trash"></i>
            <% end %>
          </div></td>
      </tr>
    <% end %>
    </tbody>
    </table>
    <%= paginate @users %>
    <div class="pull-right"><%= link_to new_administrative_user_path, class: "btn btn-success" do %>
        Novo <i class="fa fa-plus"></i>
    <% end %></div>
  </div>
  
</div>  

