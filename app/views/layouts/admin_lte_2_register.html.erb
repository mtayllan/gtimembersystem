<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>GTi Members - Cadastro</title>
  
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>

  <!-- Google Font -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
  
   <%= csrf_meta_tags %>
</head>
<body class="hold-transition register-page">
<div class="register-box">
  <div class="register-logo">
    <a href="../../index2.html"><b>GTi</b> Members</a>
  </div>

  <div class="register-box-body">
    <p class="login-box-msg">Cadastro de novo usuário</p>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
      <div class="form-group has-feedback">
        <%= f.text_field :name, class: 'form-control', autofocus: true, placeholder:"Nome"%>
        <span class="glyphicon glyphicon-user form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <%= f.email_field :email, class: 'form-control', autofocus: true, placeholder:"Email"%>
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <%= f.password_field :password, class: 'form-control', autofocus: true, placeholder:"Senha"%>
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <%= f.password_field :password_confirmation, class: 'form-control', autofocus: true, placeholder:"Confirmação de Senha"%>
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>
      <div>
           <%= f.submit "Registrar", class:"btn btn-primary btn-block btn-flat" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
  <!-- /.form-box -->
</div>
<!-- /.register-box -->


<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>


<script>
  $(function () {
    $('input').iCheck({
      checkboxClass: 'icheckbox_square-blue',
      radioClass: 'iradio_square-blue',
      increaseArea: '20%' /* optional */
    });
  });
</script>

</body>
</html>
